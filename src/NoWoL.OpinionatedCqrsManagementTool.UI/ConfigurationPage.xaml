<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xxx="clr-namespace:NoWoL.OpinionatedCqrsManagementTool.UI"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="NoWoL.OpinionatedCqrsManagementTool.UI.ConfigurationPage"
             x:DataType="xxx:ConfigurationPageViewModel"
             Title="Configuration">

    <VerticalStackLayout WidthRequest="500" >
        <Button Text="Load"
                Command="{Binding LoadCommand}" />

        <Button Text="Save"
                Clicked="SaveClicked" />
    </VerticalStackLayout>
</ContentPage>